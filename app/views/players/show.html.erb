<div class="players-container">
  <h1> <%= @player.first_name %> <%= @player.last_name %> #<%= @player.number %></h1>

  <%= image_tag @player.image, :class => 'player-photo' %>

  <div class="controls">
    <%= link_to 'Edit player', edit_player_path(@player) %>
    <%= link_to 'Delete player', @player, :method => 'delete' %>
  </div>
</div>
